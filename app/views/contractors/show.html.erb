<h1>Perfil de prestador</h1>

<h2><%= @contractor.name %></h2>
<h2><%= @contractor.cpf %></h2>
<h2><%= @contractor.profile.city %></h2>
<p><%= @contractor.category.name %></p>
<% @contractor.profile.sub_categories.each do |sub|%>
  <p><%= sub.name %></p>
<% end %>

<p><%= "Média das avaliações: #{ number_with_precision @contractor.average, options = {precision: 2} }" %></p>
<p><% @contractor.review_contractors.each do |review| %>
  <p><%= "Avaliação: #{review.grade}" %></p>
  <p><%= "Comentário: #{review.comment}" %></p>
<% end %>

<% if contractor_signed_in? %>
<p><%= link_to  "Editar perfil", edit_contractor_path(current_contractor) %></p>
<% end %>